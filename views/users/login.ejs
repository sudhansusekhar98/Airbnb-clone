<% layout('./layouts/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-8 offset-2">Login</h1>
    <div class="col-8 offset-2">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username: </label>
                <input
                  type="text"
                  name="username"
                  placeholder="Enter username"
                  class="form-control"
                  id="username"
                  required
                />
              </div>

              <label for="password" class="form-label">Password: </label>
                <input
                  type="password"
                  name="password"
                  placeholder="Enter password"
                  class="form-control"
                  id="password"
                  required
                />
              </div>

              <button class="btn btn-success mt-3 col-1 offset-5">Login</button>
        </form>
    </div>
</div>